<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Авторизация</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <style>
        body {
            background-image: url('/images/background/LoginWallpaper-photoaidcom-darken.jpg');
        }
        .purplecolor
        {
            color: #9932CC;
        }
        .background-button-purple
        {
            background-color: #9932CC;
        }
        .background-transparent
        {
            background-color: rgba(0, 0, 0, 0.5);
        }
    </style>
</head>
<body>
    @model WebApplication1.Models.LoginModel
    <form method="post" asp-action="Login" class="position-absolute top-50 start-50 translate-middle w-25 bg-dark">
        <div class="pt-1 row justify-content-center">
            <label class="col-sm-1 col-form-label purplecolor">Вход</label>
        </div>
        <div class="pt-3 row justify-content-center">
            <label for="inputLogin" class="col-sm-1 col-form-label px-0 text-light">Логин</label>
            <div class="col-sm-4 px-4">
                <input type="text" class="form-control form-control-sm" asp-for="Username"/> 
            </div>
        </div>
        <div class="mt-2 row justify-content-center">
            <label for="inputPassword" class="col-sm-1 col-form-label px-0 text-light">Пароль</label>
            <div class="col-sm-4 px-4">
                <input type="password" class="form-control form-control-sm" asp-for="Password">
            </div>
        </div>
        <div class="mt-3 d-grid gap-2 col-2 mx-auto">
            <button type="submit" class="btn background-button-purple text-white btn-sm">Войти</button> 
        </div>
        <div class="text-center">
            <a class="col-sm-2 col-form-label purplecolor">Забыли пароль?</a>
        </div>
    </form>
    <form class="fixed-bottom mb-0 background-transparent">
        <div class="text-center">
            <label class="col-sm-1 col-form-label text-white">Еще нет аккаунта?</label>
        </div>
        <div class="d-grid gap-2 col-2 mx-auto">
            @Html.ActionLink("Регистрация", "Register", "Login", null, new { @class = "btn purplecolor btn-lg mb-3" })
        </div>
    </form>
</body>