@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="container">
        <form class="form1 bg-white">
            <p class="fs-4">Результатов по вашему запросу: @ViewBag.count</p>
            <div class="d-flex flex-wrap figure-container">
                @foreach (var game in @ViewBag.games)
                {
                    <div class="flex-fill mb-3">
                        <figure class="ms-2">
                            <form asp-controller="Game" asp-action="Game" method="get">
                                <input type="hidden" name="gameId" value="@game.GamesId" />
                                <input type="image" class="image-size" src="@Url.Content(game.ImagePath)" alt="@game.GameName" />
                            </form>
                            <a class="text-black text-center a-hidden" asp-controller="Game" asp-action="Game" asp-route-gameId="@game.GamesId">@game.GameName</a>
                        </figure>
                    </div>
                }

            </div>
        </form>
